extends ../layout

block content
	h1 Reset Your Password
	div.row.col-sm-4
		form.form-horizontal.well(id="password-reset-form", method="post", role="form")
			fieldset
				div.form-group
					label.col-sm-3.control-label(for="mail") Intranet ID
					div.col-sm-9
						input.form-control(id="user-tf", name="mail", type="text", placeholder="Your Intranet ID")
			div.form-group
				div.col-sm-offset-3.col-sm-9
					button.btn.btn-primary(type="submit") Send Mail
					label #{message} 
