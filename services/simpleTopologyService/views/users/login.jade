extends ../layout

block content
	h1 Please Login with Your Intranet ID
	div.row.col-sm-4
		form.form-horizontal.well(id="sign-in-form", method="post", role="form")
			fieldset
				div.form-group
					label.col-sm-3.control-label(for="username") Intranet ID
					div.col-sm-9
						input.form-control(id="user-tf", name="username", type="text", placeholder="Your Intranet ID")
				div.form-group
					label.col-sm-3.control-label(for="password") Password
					div.col-sm-9
						input.form-control(id="pass-tf", name="password", type="password", placeholder="Your STS Password")
				div.form-group
					div.col-sm-offset-3.col-sm-9
						div.checkbox
							label
								input(type="checkbox", checked="checked")
								| Remember Me
								
			div.form-group
				div.col-sm-offset-3.col-sm-2
					button.btn.btn-primary(type="submit") Login
				div.col-sm-4
					a.btn.btn-default(id="create-account" href="/signup") Create Account
			div.form-group
				div.col-sm-offset-3.col-sm-9
					a(id="forgot-password" href="/reset") Forgot Your Password?
