extends ../../layout
block content
  h1 Create a new provider
     
  form.form-horizontal(method='post', action='/providers')
    fieldset
      legend Create a topology provider
      div.clearfix
        div.input 
          div.row 
            div.span3
              p name 
            div
              input.span3(name='provider[name]')
          div.row
            div.span3
              p description
            div
              input.span6(name='provider[description]')
          div.row
            div.span3
              p UCD_webURL
            div
              input.span6(name='provider[UCD_webURL]')
          div.row
            div.span3
              p UCD_authtoken
            div
              input.span6(name='provider[UCD_authtoken]')
          div.row
            div.span3
              p IWD_host
            div
              input.span3(name='provider[IWD_host]')
          div.row
            div.span3
              p IWD_username
            div
              input.span3(name='provider[IWD_username]')
          div.row
            div.span3
              p IWD_password
            div
              input.span3(name='provider[IWD_password]')
          

        div.actions 
          div.row
            input.offset3(type='submit', value='Save', class='btn primary')
            button.offset1(type='reset', class='btn') Cancel


