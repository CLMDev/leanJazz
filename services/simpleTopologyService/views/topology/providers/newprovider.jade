extends ../../layout
block content
  h1 Create a new provider
  form.form-horizontal(method='post', action='/providers')
    fieldset
      legend Create a topology provider
      div.clearfix
        div.input 
          div.row 
            div.span3
              p name 
            div
              input.span3(name='provider[name]', class='xlarge')
          div.row
            div.span3
              p description
            div
              input.span6(name='provider[description]', class='xlarge')
          div.row
            div.span3
              p UCD Server
            div
              input.span6(name='provider[UCD_SERVER]', class='xlarge')
          div.row
            div.span3
              p UCD Username
            div
              input.span6(name='provider[UCD_USERNAME]', class='xlarge')
          div.row
            div.span3
              p UCD Password
            div
              input.span6(name='provider[UCD_PASSWORD]', type='password', class='xlarge')
        div.actions 
          div.row
            input.offset3(type='submit', value='Save', class='btn primary')
            button.offset1(type='reset', class='btn') Cancel
