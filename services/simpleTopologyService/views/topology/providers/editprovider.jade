extends ../../layout
block content
  h1 Edit provider view
  form(method='post', action='/providers/' + provider.id)
    input(name='_method', value='PUT', type='hidden')
    fieldset
      legend Editing provider
        div.clearfix
          div.input
            div.row
              div.span3 
                p Name
              input.span3(name='provider[name]', class='xlarge', value="#{provider.name}")            
            div.row
              div.span3 
                p Description
              input.span6(name='provider[description]', class='xlarge', value="#{provider.description}")            
            div.row
              div.span3 
                p UCD_webURL
              input.span3(name='provider[UCD_webURL]', class='xlarge', value="#{provider.UCD_webURL}")
            div.row
              div.span3 
                p UCD_authtoken
              input.span3(name='provider[UCD_authtoken]', class='xlarge', value="#{provider.UCD_authtoken}")
            div.row
              div.span3 
                p IWD_host
              input.span3(name='provider[IWD_host]', class='xlarge', value="#{provider.IWD_host}")
            div.row
              div.span3 
                p IWD_username
              input.span3(name='provider[IWD_username]', class='xlarge', value="#{provider.IWD_username}")
            div.row
              div.span3 
                p IWD_password
              input.span3(name='provider[IWD_password]', class='xlarge', value="#{provider.IWD_password}")
            
            
              
        div.actions
          input.offset3(type='submit', value='Save', class='btn primary')
          button.offset1(type='reset', class='btn') Cancel

