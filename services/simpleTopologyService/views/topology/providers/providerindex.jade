extends ../../layout

block content
  h1= title
  p The following is a list of the available providers
  - if(docs.length)
    table.table.table-striped
      thead
        tr
          th Provider Name          
          th UCD webURL
          th IWD host
          th Description
      tbody
          each provider in docs
            tr
              td #{provider.name}
              td #{provider.UCD_webURL}
              td #{provider.IWD_host}
              td #{provider.description}
              td
                a.btn(href="/providers/#{provider._id}/edit") Edit
              td
                form(method='post', action='/providers/' + provider._id)
                  input(name='_method', value='DELETE', type='hidden')
                  button.btn(type='submit') Delete
  - else
    p No available providers
  p
    a(href='/providers/new', class='btn primary') Create a new Provider
