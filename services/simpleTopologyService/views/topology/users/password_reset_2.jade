extends ../.././layout

block content
  h1='Reset Password' 
  #login-container
    form( method="post")#login-form.well.span4
      h1 Hello!
      p.subheading New Password
      label Password(for STS)
      input(type="password", name="password", id='pass-tf').span4.required
      button#btn-login.btn.btn-primary
        i.icon-lock.icon-white
        | Reset Password
      label #{message} 
      
