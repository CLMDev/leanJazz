extends ../../layout

block content
  h1= title
  script(type='text/javascript').
    var onDelete=function(){
      alert( "Do you really want to delete this instance?" );
    }
    
  p The following is a list of the instances
  - if(docs.length)
    table.table.table-striped
      thead
        tr
          th Instance Name
          th Instance Type
          th Creation Date
          th Checkout User
          th Checkout Comment
      tbody
          each instance in docs
            tr
              td #{instance.name}
              td #{instance.type}
              td #{instance.creationDate}
              td #{instance.checkoutUser}
              td #{instance.checkoutComment}
              td
                if instance.checkedout
                  form(method='post', action='/topology/pools/' + instance.poolRef+'/instances/' instance.id)
                  input(name='_method', value='CHECKOUT', type='hidden')
                  button.btn(type='submit') Checkout
              td
                form(method='post', action='/topology/pools/' + instance.poolRef+'/instances/' instance.id)
                  input(name='_method', value='DELETE', type='hidden')
                  button.btn(type='submit', onClick=onDelete) Delete
  - else
    p No available instances
  
