extends ../../layout

block content
  h1= title
  script(type='text/javascript').
    $( document ).ready(function() {
      console.log( "ready!" );
      
      var  btn_obj;
      
      $('#deletedialog').dialog({
        modal: true,
        autoOpen: false,
        buttons: [
          {
           text: 'OK',
           click: function() {
             $( this ).dialog( "close" );
             $.ajax({
               url: btn_obj.value,
               data: {
               },
               type: "DEL",
               dataType : "json",
               success: function( json ) {
                  console.log( "btn_obj.id:"+btn_obj.id );
                  var btn=$('#'+btn_obj.id);
                  var row=btn.parent().parent();
                  row.remove();
               },
               error: function( xhr, status, errorThrown ) {
                 alert( "Sorry, there was a problem!" );
                 console.log( "Error: " + errorThrown );
                 console.log( "Status: " + status );
               }
             });//ajax

           }
          },
          {
           text: 'CANCEL',
           click: function() {
             $( this ).dialog( "close" );
           }
          }
        ]
      });//delete dialog
      console.log(  $(':button:contains("Delete")') );
        $(':button:contains("Delete")')
        .click(function() {
         btn_obj=this;
         console.log('setting button obj'+btn_obj);
         $('#deletedialog').dialog('open');
        });      
        $(':button:contains("Checkout")')
        .click(function() {
         btn_obj=this;
         $('#checkoutdialog').dialog('open');
        });//checkout
    });//ready
    
  p The following is a list of the instances
  - if(docs.length) 
    div(id="checkoutdialog", title="checkout comments")
     p
      label
       please input comments
      input( type="text" id="comments_input") 

    div(id="deletedialog", title="Delete Confirmation")
     p
      label
        Are you sure you want to delete it? 

    table.table.table-striped
      thead
        tr
          th Build Stream
          th Reference URL
          th Description         
      tbody
          each build in docs
            tr
              td #{buildstream.buildStream}
              td #{buildstream.refURL}
              td #{buildstream.description}
              td
                button.btn(type='submit',value='/api/v1/buildstreams/' + buildstream.buildStream, id='delete_'+ buildstream.buildStream+, title='Delete '+buildstream.buildStream+' ?') Delete
  - else
    p No available build streams
  p
    a(href='/buildstreams/new', class='btn primary') Add a new build stream
  
