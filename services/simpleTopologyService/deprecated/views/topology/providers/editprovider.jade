extends ../../layout
block content
  h1 Edit provider view
  form(method='post', action='/providers/' + provider.id)
    input(name='_method', value='PUT', type='hidden')
    fieldset
      legend Editing provider
      div.clearfix
        div.input
          div.row
            div.span3 
              p Name
            div
              input.span3(name='provider[name]', class='xlarge', value="#{provider.name}")            
          div.row
            div.span3 
              p Description
            div
              input.span6(name='provider[description]', class='xlarge', value="#{provider.description}")            
          div.row
            div.span3 
              p UCD Server
            div
              input.span6(name='provider[UCD_SERVER]', class='xlarge', value="#{provider.UCD_SERVER}")
          div.row
            div.span3 
              p UCD Username
            div
              input.span6(name='provider[UCD_USERNAME]', class='xlarge', value="#{provider.UCD_USERNAME}")
          div.row
            div.span3 
              p UCD Password
            div
              input.span6(name='provider[UCD_PASSWORD]', type='password', class='xlarge', value="#{provider.UCD_PASSWORD}")
      div.actions
        input.offset3(type='submit', value='Save', class='btn primary')
        button.offset1(type='reset', class='btn') Cancel
